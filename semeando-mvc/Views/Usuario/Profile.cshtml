@model semeando_mvc.Application.Dtos.UsuarioDto

@{
    ViewData["Title"] = "Perfil";
}

<div class="container d-flex flex-column align-items-center justify-content-center vh-100">
    <div class="card shadow p-4 w-100" style="max-width: 400px;">
        <div class="text-center mb-4">
            <img src="https://via.placeholder.com/100" alt="Avatar" class="rounded-circle mb-3">
            <h3>@Model.NomeUsuario</h3>
        </div>

        <form asp-controller="Usuario" asp-action="UpdateProfile" method="post">
            <input type="hidden" asp-for="IdUsuario" />

            <!-- Nome -->
            <div class="form-group mb-3">
                <label asp-for="NomeUsuario"></label>
                <input asp-for="NomeUsuario" class="form-control" placeholder="Digite seu nome completo" />
                <span asp-validation-for="NomeUsuario" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Bio -->
            <div class="form-group mb-3">
                <label asp-for="Bio"></label>
                <textarea asp-for="Bio" class="form-control" placeholder="Digite algo sobre você"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
                <div class="text-end mt-2">
                    <!-- Botão para deletar a bio -->
                    <form asp-controller="Usuario" asp-action="DeleteBio" method="post" class="d-inline">
                        <input type="hidden" asp-for="IdUsuario" />
                        <button type="submit" class="btn btn-danger btn-sm">Excluir Bio</button>
                    </form>
                </div>
            </div>

            <!-- Botão para Salvar Alterações -->
            <button type="submit" class="btn btn-success w-100">Salvar Alterações</button>
        </form>
    </div>
</div>
