@model semeando_mvc.Application.Dtos.UsuarioDto

@{
    ViewData["Title"] = "Registro";
}

<div class="container d-flex flex-column align-items-center justify-content-center vh-100">
    <!-- Cabeçalho -->
    <div class="text-center mb-4">
        <img src="~/images/BANNER 2 1.png" alt="Logo Semeando" class="mb-3" style="height: 90px;">
        <h1 class="display-6 fw-bold text-success">Bem-vindo ao Semeando LTDA</h1>
        <p class="text-muted">Junte-se à mudança e faça parte de um futuro sustentável.</p>
    </div>

    <!-- Formulário de Registro -->
    <div class="card shadow p-4 w-100" style="max-width: 400px;">
        <form asp-action="Register" method="post">
            <!-- Nome -->
            <div class="form-group mb-4">
                <label asp-for="NomeUsuario" class="form-label fw-semibold">Nome Completo</label>
                <input asp-for="NomeUsuario" class="form-control" placeholder="Digite seu nome completo" />
                <span asp-validation-for="NomeUsuario" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label fw-semibold">E-mail</label>
                <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <!-- Botão de Registro -->
            <button type="submit" class="btn btn-success btn-lg w-100">Registrar</button>
        </form>

        <!-- Link para Login -->
        <div class="mt-4 text-center">
            <p class="text-muted small">Já possui uma conta? <a href="@Url.Action("Login", "Usuario")" class="text-success fw-semibold">Faça login.</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
