@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex flex-column align-items-center justify-content-center vh-100">
    <!-- Logo e introdução -->
    <div class="text-center mb-4">
        <img src="~/images/LOGO SMALL.png" alt="Semeando Logo" class="mb-3" style="max-height: 100px;">
        <h1 class="display-5 fw-bold text-success">Semeando LTDA</h1>
        <p class="lead text-muted">Transformando conhecimento em ação sustentável, um passo de cada vez.</p>
    </div>

    <!-- Formulário de login -->
    <div class="card shadow border-0 rounded w-100" style="max-width: 400px;">
        <div class="card-body">
            <h3 class="text-center mb-4 text-success">Acesse sua conta</h3>
            <form asp-controller="Usuario" asp-action="Login" method="post">
                <!-- Email -->
                <div class="form-group mb-3">
                    <label for="email" class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control rounded-pill shadow-sm" id="email" name="email" placeholder="Digite seu email" required>
                </div>

                <!-- Senha -->
                <div class="form-group mb-3">
                    <label for="senha" class="form-label fw-semibold">Senha</label>
                    <input type="password" class="form-control rounded-pill shadow-sm" id="senha" name="senha" placeholder="Digite sua senha" required>
                </div>

                <!-- Mensagem de erro -->
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger rounded-pill text-center shadow-sm">@ViewBag.ErrorMessage</div>
                }

                <!-- Botão de login -->
                <button type="submit" class="btn btn-success w-100 rounded-pill shadow-sm">Entrar</button>
            </form>

            <!-- Link para registro -->
            <div class="mt-3 text-center">
                <small class="text-muted">
                    Não possui uma conta?
                    <a href="@Url.Action("Register", "Usuario")" class="text-success fw-semibold">Crie a sua agora!</a>
                </small>
            </div>
        </div>
    </div>
</div>
