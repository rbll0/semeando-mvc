@model semeando_mvc.Application.Dtos.UsuarioDto

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container mt-4">
    <h1 class="mb-3">Editar Usuário</h1>
    <form asp-controller="Admin" asp-action="EditConfirmed" method="post">
        <input type="hidden" asp-for="IdUsuario" />

        <!-- Nome -->
        <div class="form-group mb-3">
            <label asp-for="NomeUsuario"></label>
            <input asp-for="NomeUsuario" class="form-control" placeholder="Digite o nome do usuário" />
            <span asp-validation-for="NomeUsuario" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Digite o email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Bio -->
        <div class="form-group mb-3">
            <label asp-for="Bio"></label>
            <textarea asp-for="Bio" class="form-control" placeholder="Digite algo sobre o usuário"></textarea>
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <!-- Botões -->
        <button type="submit" class="btn btn-success">Salvar Alterações</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
